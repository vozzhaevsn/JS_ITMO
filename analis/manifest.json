{
  "manifest_version": 3,
  "name": "Behavior Graph Analyzer",
  "version": "1.0.2",
  "description": "Analyze user behavior patterns and visualize interaction graphs in real-time",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_title": "Behavior Graph Analyzer"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/scripts/content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
